generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_POSTGRES_URL")
}

model Campaign {
  id           String @unique @default(cuid())
  name         String
  templateId   String
  userGroupId  String
  scheduleDate String
  scheduleTime String
}
